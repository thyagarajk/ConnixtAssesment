@model Connixt.Shared.Models.ReportListResponse
@{
    ViewData["Title"] = "Reports";
}
<div class="container-fluid mt-3">
    <div class="row align-items-center mb-2">
        <div class="col">
            <img src="~/img/top-left.png" style="height:40px" />
        </div>
        <div class="col text-end">
            <img src="~/img/top-right.png" style="height:40px" />
        </div>
    </div>

    <div class="row mb-2">
        <div class="col text-end">
            <strong>Rows: @Model.Total</strong>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ZHOSTID</th>
                            <th>ZDIDDATANUM</th>
                            <th>ZDIDDATAST</th>
                            <th>ZDIDDESC</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Rows)
                        {
                            <tr>
                                <td>@r.ZHOSTID</td>
                                <td>@r.ZDIDDATANUM</td>
                                <td>@r.ZDIDDATAST</td>
                                <td>@r.ZDIDDESC</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
