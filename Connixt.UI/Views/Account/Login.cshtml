@model Connixt.UI.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout"; 
}

<div class="container-fluid login-page">
    <div class="row vh-100">
        <!-- Left side image -->
        <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center bg-white">
            <img src="~/images/loginpage_image.png" class="img-fluid rounded shadow-sm"
                 style="max-height:90%; max-width:90%;" alt="login image" />
        </div>

        <!-- Right side -->
        <div class="col-md-6 d-flex flex-column align-items-center justify-content-center bg-light px-4">
            <!-- Logo & Tagline -->
            <div class="text-center mb-4">
                <h1 class="fw-bold">iMarq</h1>
                <p class="text-warning fw-semibold small">DIGITAL TRANSFORMATION SIMPLIFIED</p>
            </div>

            <!-- Login Form -->
            <div class="login-box bg-white p-4 shadow-sm rounded" style="min-width:320px; max-width:400px; width:100%;">
                <h5 class="text-center mb-4">Sign in to iMarq</h5>

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username<span class="text-danger">*</span></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password<span class="text-danger">*</span></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
                    }
                </form>

                <!-- Extra Links -->
                <div class="d-flex justify-content-between small mt-2">
                    <a href="#">Forgot Password</a>
                    <a href="#">First Time User? Register</a>
                </div>
            </div>

            <!-- App Store Buttons -->
            <div class="d-flex justify-content-center mt-4 gap-3">
                <a href="#"><img src="~/images/Gplay.png.webp" alt="Google Play" style="height:40px;" /></a>
                <a href="#"><img src="~/images/App-Store-Logo-PNG.png" alt="App Store" style="height:40px;" /></a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
